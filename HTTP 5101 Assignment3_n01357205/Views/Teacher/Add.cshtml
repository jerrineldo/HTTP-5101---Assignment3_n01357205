
@{
    ViewBag.Title = "Add";
}
<script>
    window.onload = function () {
        var formhandle = document.forms.TeacherForm;
        formhandle.onsubmit = processForm;
        function processForm() {

            if (formhandle.TeacherFname.value == '') {
                formhandle.TeacherFname.style.background = "red";
                formhandle.TeacherFname.focus();
                return false;
            }
            else {
                formhandle.TeacherFname.style.background = "none";
            }

            if (formhandle.TeacherLname.value == '') {
                formhandle.TeacherLname.style.background = "red";
                formhandle.TeacherLname.focus();
                return false;
            }
            else {
                formhandle.TeacherLname.style.background = "none";
            }

            if (formhandle.EmployeeNumber.value =='') {
                formhandle.EmployeeNumber.style.background = "red";
                formhandle.EmployeeNumber.focus();
                return false;
            }
            else {
                formhandle.EmployeeNumber.style.background = "none";
            }

            if (formhandle.Salary.value == '') {
                formhandle.Salary.style.background = "red";
                formhandle.Salary.focus();
                return false;
            }
            else {
                formhandle.Salary.style.background = "none";
            }
        }//end of processForm
    }
</script>
<h2>Add Teacher</h2>
<form method="POST" action="/Teacher/Create" name="TeacherForm" onsubmit="">
    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" />
    </div>
    <div>
        <label for="TeacherLname">Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" />
    </div>
    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
    </div>
    <div>
        <label for="Salary">Salary:</label>
        <input type="text" id="Salary" name="Salary" />
    </div>
    <div>
        <input type="submit" value="Create Teacher" />
    </div>
</form>

